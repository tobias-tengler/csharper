{
  "name": "csharper",
  "displayName": "CSharper",
  "version": "0.0.1",
  "description": "Easily create templated C# files",
  "license": "MIT",
  "author": {
    "name": "Tobias Tengler",
    "url": "https://github.com/tobias-tengler"
  },
  "publisher": "tobiastengler",
  "repository": "https://github.com/tobias-tengler/csharper",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:csharp",
    "onCommand:csharper.newFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "csharper.newFile",
        "title": "New C# File"
      }
    ],
    "keybindings": [
      {
        "command": "csharper.newFile",
        "key": "ctrl+j ctrl+j"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "group": "navigation@-1",
          "command": "csharper.newFile",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "CSharper",
      "properties": {
        "csharper.includeNamespace": {
          "type": "boolean",
          "default": true,
          "description": "Surround template with namesapce"
        },
        "csharper.includeSubdirectoriesInNamespace": {
          "type": "boolean",
          "default": true,
          "description": "Include subdirectories in namespace"
        },
        "csharper.respectFocusedDocument": {
          "type": "boolean",
          "default": true,
          "description": "Select project closest to focused document automatically"
        },
        "csharper.useNamespaceOfNeighboringFiles": {
          "type": "boolean",
          "default": true,
          "description": "Re-use the namespace of neighboring files"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run lint && npm run compile",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.1",
    "@types/node": "^12.11.7",
    "@types/sinon": "^9.0.11",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.3.2",
    "sinon": "^9.2.4",
    "typescript": "^4.1.3",
    "vsce": "^1.87.0",
    "vscode-test": "^1.5.0"
  }
}
